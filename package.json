{
    "name": "nrfconnect",
    "version": "2.0.0",
    "description": "nRF Connect for PC",
    "repository": {
        "type": "git",
        "url": "https://github.com/NordicSemiconductor/pc-nrfconnect-core.git"
    },
    "main": "index.js",
    "scripts": {
        "start": "echo 'please run `npm run dev` in one tab and then `npm run app` in another one'",
        "postinstall": "npm run get-nrfjprog",
        "app": "electron .",
        "dev": "webpack --watch",
        "webpack": "webpack",
        "build": "cross-env NODE_ENV=production webpack",
        "lint": "eslint main lib",
        "test": "jest",
        "test-watch": "jest --watch",
        "test-e2e": "xvfb-maybe jest --runInBand --config test/setup/jest-e2e.json",
        "clean": "npm install rimraf && npm run clean-build && npm run clean-release && npm run clean-modules",
        "clean-build": "rimraf dist && rimraf build/nrfjprog",
        "clean-release": "rimraf release",
        "clean-modules": "rimraf \"node_modules/!(rimraf|.bin)\"",
        "get-nrfjprog": "node build/get-nrfjprog.js",
        "pack": "npm run build && build -p never",
        "release": "build -p always"
    },
    "author": "Nordic Semiconductor ASA",
    "license": "Proprietary",
    "build": {
        "appId": "com.nordicsemi.nrfconnect",
        "productName": "nRF Connect",
        "publish": [
            "github"
        ],
        "files": [
            "dist/",
            "main/",
            "node_modules/",
            "!node_modules/pc-nrfjprog-js/nrfjprog",
            "resources/*.html",
            "resources/*.png",
            "index.js"
        ],
        "directories": {
            "output": "release"
        },
        "linux": {
            "target": [
                "tar.gz"
            ],
            "extraFiles": [
                { "from": "build/nrfjprog/unpacked/nrfjprog", "to": ".", "filter": "*.so*" }
            ]
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "extraFiles": [
                { "from": "build/nrfjprog/unpacked/nrfjprog", "to": "Frameworks", "filter": "*.dylib" }
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "menuCategory": "Nordic Semiconductor",
            "include": "build/installer.nsh"
        }
    },
    "devDependencies": {
        "asar": "0.13.0",
        "babel-polyfill": "6.23.0",
        "bootstrap": "3.3.7",
        "electron": "1.6.7",
        "electron-builder": "18.5.1",
        "electron-is-dev": "0.1.2",
        "moment": "2.18.1",
        "mousetrap": "1.6.1",
        "pc-nrfconnect-devdep": "https://github.com/NordicSemiconductor/pc-nrfconnect-devdep.git#v1.0.0",
        "react-infinite": "NordicSemiconductor/react-infinite#react-15.5",
        "redux-logger": "3.0.1",
        "redux-thunk": "2.2.0",
        "spectron": "3.6.4",
        "tar": "2.2.1",
        "util": "0.10.3",
        "winston": "2.3.1",
        "xvfb-maybe": "0.2.1"
    },
    "dependencies": {
        "electron-builder-http": "18.5.1",
        "electron-log": "2.2.6",
        "electron-updater": "2.0.0",
        "pc-ble-driver-js": "https://github.com/NordicSemiconductor/pc-ble-driver-js.git#v2.0.0",
        "pc-nrfjprog-js": "https://github.com/NordicSemiconductor/pc-nrfjprog-js.git#v1.0",
        "semver": "5.3.0",
        "serialport": "4.0.7",
        "yargs": "8.0.1",
        "yarn": "0.25.2"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/mocks/fileMock.js",
            "\\.(css|less)$": "<rootDir>/mocks/styleMock.js"
        }
    }
}
